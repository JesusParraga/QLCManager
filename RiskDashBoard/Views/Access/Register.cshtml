@{
	Layout = null;
}

@using RiskDashBoard.Models.ViewModels
@model UserViewModel

<!DOCTYPE html>
<html>
<head>
	<title>My Awesome Login Page</title>
	<link href="~/css/login/LogInbootstrap.min.css" rel="stylesheet" />
	<script src="~/js/LogInJs/LogInJquery.min.js"></script>
	<script src="https://kit.fontawesome.com/6efa2f4c47.js" crossorigin="anonymous"></script>
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<link href="~/css/Login/LogIn.css" rel="stylesheet" />

</head>

<body>
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card_register">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<img src="~/img/RiskManager.svg" class="brand_logo" alt="Logo">
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<form action="@Url.Action("Register", "Access")" method="post">
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" name="UserName" class="form-control input_user" value="" placeholder="Username">
						</div>
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
							</div>
							<input type="text" name="Email" class="form-control input_user" value="" placeholder="Email">
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" name="Password" class="form-control input_pass" value="" placeholder="Password">
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" name="ConfirmPassword" class="form-control input_pass" value="" placeholder="Confirm password">
						</div>

						@if (ViewData["message"] != null)
						{
							<div class="alert alert-danger" role="alert">
								@ViewData["message"]
							</div>
						}

						<div class="d-flex justify-content-center mt-3 login_container">
							<button type="submit" name="button" class="btn login_btn">Create new user</button>
						</div>
					</form>
				</div>

				<div class="mt-4">
					<div class="d-flex justify-content-center links">
						Do you want to Login? <a href="@Url.Action("Login", "Access")" class="ml-2">Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>

</body>
</html>