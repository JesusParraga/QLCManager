        <div class="col-sm p-3 min-vh-100">

            <div class="card" style="margin-top: 5px">
                <h5 class="card-header">
                    <span>Incremental Definition</span>
                </h5>
            </div>

            @foreach (var phase in Model)
            {
                <div class="card" style="margin-top: 5px">
                    <h5 class="card-header">
                            <a data-bs-toggle="collapse" href="#@phase.PhaseId" aria-expanded="true" aria-controls="collapse-example" id="phase_@phase.PhaseId" class="d-block @(phase.IsCurrentPhase ? "" : "collapsed")">
                                <i class="fa fa-chevron-down pull-right"></i>
                                @switch (phase.PhaseTypeId)
                                {
                                    case 1:
                                        <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">EXPLORATION</span>
                                        break;
                                    case 2:
                                        <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">VALUATION</span>
                                        break;
                                    case 3:
                                        <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">FOUNDATIONS</span>
                                        break;
                                    case 4:
                                        <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">DEVELOPMENT</span>
                                        break;
                                    case 5:
                                        <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">OPERATION</span>
                                        break;
                                }
                            </a>
                    </h5>
                    <div id="@phase.PhaseId" class="collapse @(phase.IsCurrentPhase ? " show" :"")" aria-labelledby="heading-example">
                        <div class="card-body">
                            <div class="row">
                                @foreach (var risk in phase?.Risks)
                                {
                                    var border = risk.RiskLevel > 75 ? "border-danger" : risk.RiskLevel > 50  ? "border-warning" : risk.RiskLevel > 25 ? "border-primary" : "border-success";
                                    <div class="card @(border) mb-3" style="max-width: 18rem; margin-left: 10px">
                                        <div class="card-body">
                                            <h5 class="card-title">@risk.RiskName</h5>
                                            <p class="card-text">@risk.RiskDescription</p>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="row">
                                @if (phase.IsCurrentPhase)
                                {
                                    <a class="btn btn-outline-info mx-1 p-1" onclick="DislplayValidatePhase(@phase.PhaseId)"><i class="fa-solid fa-diagram-next"></i></a>
                                    <a class="btn btn-outline-success mx-1 p-1" onclick="DislplayAddRiskToPhase(@phase.PhaseId)"><i class="fa-solid fa-plus"></i></a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (phase.PhaseTypeId == 3 && Model.Count() > 3)
                {
                    <div class="card" style="margin-top: 5px">
                        <h5 class="card-header">
                            <span>Incremental Development Operations & Production</span>
                        </h5>
                    </div>
                }
            }
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="validatePhaseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Validate Phase</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="validatePhaseProcessBody"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addRiskToPhaseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add risk</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="addRiskToPhaseBody"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
            </div>
        </div>
    </div>
</div>

