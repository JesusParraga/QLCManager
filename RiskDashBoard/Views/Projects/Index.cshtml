@model IEnumerable<RiskDashBoard.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://kit.fontawesome.com/6efa2f4c47.js" crossorigin="anonymous"></script>
<link href="~/css/Project/ProjectList/projectList.css" rel="stylesheet" />

<div class="container mt-5 pt-4">
    <div class="row align-items-end pb-2">
        <div class="col-md-8">
            <div class="section-title text-center text-md-start">
                <h4 class="title mb-4">Create a new project   <a asp-action="Create"><i class="fas fa-plus"></i></a></h4>             
            </div>
        </div><!--end col-->
    </div><!--end row-->

    <div class="row">
    @foreach (var item in Model) {
            <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <div class="card border-0 bg-light rounded shadow">
                        <div class="card-body p-4">
                            <a asp-action="Create">
                            @switch (@item.Phases?.FirstOrDefault(x => x.IsCurrentPhase)?.PhaseId)
                            {
                                case 1:
                                    <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">"EXPLORATION"</span>
                                    break;
                                case 2:
                                    <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">"VALUATION"</span>
                                    break;
                                case 3:
                                    <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">"FOUNDATIONS"</span>
                                    break;
                                case 4:
                                    <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">"DEVELOPMENT"</span>
                                    break;
                                case 5:
                                    <span class="badge rounded-pill bg-primary float-md-end mb-3 mb-sm-0">"OPERATION"</span>
                                    break;
                            }
                                <h5> @Html.DisplayFor(modelItem => item.ProjectName) </h5>
                                <div class="mt-3">
                                    <span class="text-muted d-block"><i class="fa fa-calendar-days" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.ProjectCreateDate.Date) </span>
                                </div>
                            </a>
                            <div class="mt-6">
                                <a asp-action="Edit" asp-route-id="@item.ProjectId"><i class="fa-solid fa-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.ProjectId"><i class="fa-solid fa-circle-info"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.ProjectId"><i class="fas fa-trash"></i></a>
                            </div>
                        </div>
                    </div>

            </div><!--end col-->
    }
    </div><!--end row-->
</div>



